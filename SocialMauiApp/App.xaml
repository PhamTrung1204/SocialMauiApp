<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="SocialMauiApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SocialMauiApp"
    xmlns:templates="clr-namespace:SocialMauiApp.Templates">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <Style x:Key="formLabel" TargetType="Label">
                        <Setter Property="FontAttributes" Value="Bold" />
                    </Style>
                    <Style x:Key="rounded" TargetType="Button">
                        <Setter Property="CornerRadius" Value="20" />
                    </Style>
                    <Style x:Key="fadedLine" TargetType="BoxView">
                        <Setter Property="HeightRequest" Value="1" />
                        <Setter Property="Color" Value="{StaticResource Primary}" />
                        <Setter Property="Opacity" Value="0.2" />
                    </Style>
                    <DataTemplate x:Key="postWithImageTemplate">
                        <templates:PostWithImage />
                    </DataTemplate>
                    <DataTemplate x:Key="postWithNoImageTemplate">
                        <templates:PostWithNoImage />
                    </DataTemplate>
                    <DataTemplate x:Key="postWithImageOnlyTemplate">
                        <templates:PostWithOnlyImage />
                    </DataTemplate>


                    <templates:PostTemplateSelector
                        x:Key="postDataTemplateSelector"
                        ImageOnly="{StaticResource Key=postWithImageOnlyTemplate}"
                        WithImage="{StaticResource Key=postWithImageTemplate}"
                        WithNoImage="{StaticResource Key=postWithNoImageTemplate}" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
