<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialMauiApp.Pages.PostDetailsPage"
             xmlns:controls="clr-namespace:SocialMauiApp.Controls"
             BackgroundColor="{StaticResource Gray100}"
             Shell.PresentationMode="ModalAnimated">
    <Grid RowDefinitions="Auto,*,Auto">
        <Grid Grid.Row="0"
              Padding="15"
              BackgroundColor="{StaticResource Primary}"
              ColumnDefinitions="Auto, *, Auto, Auto" ColumnSpacing="5">
            <Border
                Grid.Column="0"
                BackgroundColor="White"
                HeightRequest="30"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="0"
                WidthRequest="30">
                <Image
                    HeightRequest="24"
                    HorizontalOptions="Center"
                    Source="x.png"
                    VerticalOptions="Center"
                    WidthRequest="24"/>
                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Border.GestureRecognizers>
            </Border>
            <Border
                Grid.Column="2"
                BackgroundColor="White"
                HeightRequest="30"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="0"
                WidthRequest="30">
                <Image
                HeightRequest="24"
                HorizontalOptions="Center"
                Source="pencil.png"
                VerticalOptions="Center"
                WidthRequest="24"/>
                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10"/>
                </Border.Shadow>
            </Border>
            <Border
                Grid.Column="3"
                BackgroundColor="White"
                HeightRequest="30"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="0"
                WidthRequest="30">
                <Image
                HeightRequest="24"
                HorizontalOptions="Center"
                Source="trash.png"
                VerticalOptions="Center"
                WidthRequest="24"/>
                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10"/>
                </Border.Shadow>
            </Border>
        </Grid>
        <ScrollView Grid.Row="1">
            <Grid RowDefinitions="Auto,*" RowSpacing="10">
                <Border 
                Grid.Row="0"
                Padding="0, 8"
                BackgroundColor="White"
                StrokeThickness="0">
                    <Grid RowDefinitions="Auto,250,Auto,Auto" RowSpacing="8">
                        <Grid ColumnDefinitions="40,Auto,*" 
                              ColumnSpacing="5" 
                              Padding="8,0">
                            <Border Grid.Column="0"
                                    StrokeShape="RoundRectangle 20"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    BackgroundColor="LightGoldenrodYellow">
                                <Image Source="personal.png"
                                       HeightRequest="30"
                                       WidthRequest="30"
                                       Aspect="AspectFill"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       BackgroundColor="LightGoldenrodYellow"/>
                            </Border>

                            <Grid Grid.Column="1" ColumnDefinitions="Auto, Auto, Auto" HorizontalOptions="Center" VerticalOptions="Center" ColumnSpacing="5">
                                <Label Grid.Column="0" Text="Pham Trung" FontAttributes="Bold"/>
                                <Label Grid.Column="1" 
                                       Text="."
                                       FontSize="14"
                                       Margin="0,-7,0,0"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                                <Label Grid.Column="2" 
                                       Text="04 Jan 2025"
                                       FontSize="12"
                                       VerticalOptions="Center"/>
                            </Grid>

                        </Grid>
                        <Border Grid.Row="1" BackgroundColor="LightBlue" HeightRequest="250" StrokeThickness="0">
                            <Image Source="dotnet_bot" Aspect="Center" HeightRequest="250"/>
                        </Border>
                        <Label Grid.Row="2" Text="Some randome post text will go here." TextColor="{StaticResource Gray900}" FontSize="15" Padding="8,0"/>


                        <VerticalStackLayout Grid.Row="3">

                            <BoxView Style="{StaticResource fadedLine}"/>

                            <FlexLayout JustifyContent="SpaceAround" Margin="0,7,0,0">

                                <HorizontalStackLayout Spacing="2">
                                    <controls:PrimaryColorImage
Source="heart.png" 
VerticalOptions="Center"
WidthRequest="20"/>
                                    <Label Text="Like"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="2">
                                    <controls:PrimaryColorImage
WidthRequest="20"
Source="comment.png"
VerticalOptions="Center"/>
                                    <Label Text="Comment"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="2">
                                    <controls:PrimaryColorImage
Source="save.png"
VerticalOptions="Center"
WidthRequest="20"/>
                                    <Label Text="Save"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="2">
                                    <controls:PrimaryColorImage
WidthRequest="20"
Source="share.png" 
VerticalOptions="Center"/>
                                    <Label Text="Share"/>
                                </HorizontalStackLayout>
                            </FlexLayout>
                        </VerticalStackLayout>

                    </Grid>

                </Border>
                <VerticalStackLayout
                    x:Name="comments"
                    Grid.Row="1"
                    Padding="0,15"
                    Spacing="10">
                    <Grid ColumnDefinitions="40,*" ColumnSpacing="5" Padding="8,0">
                        <Border Grid.Column="0"
                                StrokeShape="RoundRectangle 20"
                                HeightRequest="40"
                                WidthRequest="40"
                                VerticalOptions="Start">
                            <Image Source="personal.png"
                                   HeightRequest="30"
                                   WidthRequest="30"
                                   Aspect="AspectFit"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   BackgroundColor="LightGoldenrodYellow"/>
                        </Border>
                        <Grid Grid.Column="1"
                              RowDefinitions="Auto,Auto"
                              RowSpacing="5"
                              BackgroundColor="White"
                              Padding="5">
                            <Grid 
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto" 
                                VerticalOptions="Center" 
                                ColumnSpacing="5">
                                <Label Grid.Column="0" 
            Text="Pham Trung" 
            FontAttributes="Bold"/>
                                <Label Grid.Column="1" 
            Text="."
            FontSize="14"
            Margin="0,-7,0,0"
            FontAttributes="Bold"
            VerticalOptions="Center"/>
                                <Label Grid.Column="2" 
            Text="04 Jan 2025"
            FontSize="12"
            VerticalOptions="Center"/>
                            </Grid>
                            <Label Grid.Row="1" Text="Comment text" TextColor="Gray"/>
                        </Grid>
                    </Grid>
                    <Grid ColumnDefinitions="40,*" ColumnSpacing="5" Padding="8,0">
                        <Border Grid.Column="0"
                    StrokeShape="RoundRectangle 20"
                    HeightRequest="40"
                    WidthRequest="40"
                                VerticalOptions="Start">
                            <Image Source="personal.png"
                       HeightRequest="30"
                       WidthRequest="30"
                       Aspect="AspectFill"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       BackgroundColor="LightGoldenrodYellow"/>
                        </Border>
                        <Grid Grid.Column="1"
                  RowDefinitions="Auto,Auto"
                  RowSpacing="5"
                  BackgroundColor="White"
                  Padding="5">
                            <Grid 
                    Grid.Row="0"
                    ColumnDefinitions="Auto, Auto, Auto" 
                    VerticalOptions="Center" 
                    ColumnSpacing="5">
                                <Label Grid.Column="0" 
Text="Pham Trung" 
FontAttributes="Bold"/>
                                <Label Grid.Column="1" 
Text="."
FontSize="14"
Margin="0,-7,0,0"
FontAttributes="Bold"
VerticalOptions="Center"/>
                                <Label Grid.Column="2" 
Text="04 Jan 2025"
FontSize="12"
VerticalOptions="Center"/>
                            </Grid>
                            <Label Grid.Row="1" Text="Comment text" TextColor="Gray"/>
                        </Grid>



                    </Grid>
                    <Grid ColumnDefinitions="40,*" ColumnSpacing="5" Padding="8,0">
                        <Border Grid.Column="0"
                    StrokeShape="RoundRectangle 20"
                    HeightRequest="40"
                    WidthRequest="40"
                                VerticalOptions="Start">
                            <Image Source="personal.png"
                       HeightRequest="30"
                       WidthRequest="30"
                       Aspect="AspectFill"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       BackgroundColor="LightGoldenrodYellow"/>
                        </Border>
                        <Grid Grid.Column="1"
                  RowDefinitions="Auto,Auto"
                  RowSpacing="5"
                  BackgroundColor="White"
                  Padding="5">
                            <Grid 
                    Grid.Row="0"
                    ColumnDefinitions="Auto, Auto, Auto" 
                    VerticalOptions="Center" 
                    ColumnSpacing="5">
                                <Label Grid.Column="0" 
Text="Pham Trung" 
FontAttributes="Bold"/>
                                <Label Grid.Column="1" 
Text="."
FontSize="14"
Margin="0,-7,0,0"
FontAttributes="Bold"
VerticalOptions="Center"/>
                                <Label Grid.Column="2" 
Text="04 Jan 2025"
FontSize="12"
VerticalOptions="Center"/>
                            </Grid>
                            <Label Grid.Row="1" Text="Comment text Comment text Comment textComment textComment text" TextColor="Gray"/>
                        </Grid>



                    </Grid>
                    <Grid ColumnDefinitions="40,*" ColumnSpacing="5" Padding="8,0">
                        <Border Grid.Column="0"
                    StrokeShape="RoundRectangle 20"
                    HeightRequest="40"
                    WidthRequest="40"
                                VerticalOptions="Start">
                            <Image Source="personal.png"
                       HeightRequest="30"
                       WidthRequest="30"
                       Aspect="AspectFill"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       BackgroundColor="LightGoldenrodYellow"/>
                        </Border>
                        <Grid Grid.Column="1"
                  RowDefinitions="Auto,Auto"
                  RowSpacing="5"
                  BackgroundColor="White"
                  Padding="5">
                            <Grid 
                    Grid.Row="0"
                    ColumnDefinitions="Auto, Auto, Auto" 
                    VerticalOptions="Center" 
                    ColumnSpacing="5">
                                <Label Grid.Column="0" 
Text="Pham Trung" 
FontAttributes="Bold"/>
                                <Label Grid.Column="1" 
Text="."
FontSize="14"
Margin="0,-7,0,0"
FontAttributes="Bold"
VerticalOptions="Center"/>
                                <Label Grid.Column="2" 
Text="04 Jan 2025"
FontSize="12"
VerticalOptions="Center"/>
                            </Grid>
                            <Label Grid.Row="1" Text="Comment text Comment text Comment textComment textComment text" TextColor="Gray"/>
                        </Grid>



                    </Grid>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="5" BackgroundColor="White" Padding="15,10,15,15">
            <controls:NoBorderEntry Grid.Column="0" Placeholder="Enter comment..." PlaceholderColor="Black"/>
            <Border BackgroundColor="{StaticResource Primary}" 
                    HeightRequest="44" 
                    Grid.Column="1"
                    StrokeShape="RoundRectangle 8"
                    WidthRequest="44"
                    >
                <controls:WhiteImage Source="send.png" 
                                     HeightRequest="24" 
                                     WidthRequest="24"/>
            </Border>
        </Grid>
    </Grid>

</ContentPage>