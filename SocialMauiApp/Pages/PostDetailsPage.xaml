<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SocialMauiApp.Pages.PostDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SocialMauiApp.Controls"
    xmlns:templates="clr-namespace:SocialMauiApp.Templates"
    xmlns:vm="clr-namespace:SocialMauiApp.ViewModel"
    x:DataType="vm:DetailsViewModel"
    BackgroundColor="{StaticResource Gray100}"
    Shell.PresentationMode="ModalAnimated">
    <Grid RowDefinitions="Auto,*,Auto">
        <Grid
            Grid.Row="0"
            Padding="15"
            BackgroundColor="{StaticResource Primary}"
            ColumnDefinitions="Auto, *, Auto, Auto"
            ColumnSpacing="5">
            <Border
                Grid.Column="0"
                BackgroundColor="White"
                HeightRequest="30"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="0"
                WidthRequest="30">
                <Image
                    HeightRequest="24"
                    HorizontalOptions="Center"
                    Source="x.png"
                    VerticalOptions="Center"
                    WidthRequest="24" />
                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10" />
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Border.GestureRecognizers>
            </Border>
            <Border
                Grid.Column="2"
                BackgroundColor="White"
                HeightRequest="30"
                IsVisible="{Binding IsOwnPost}"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="0"
                WidthRequest="30">
                <Image
                    HeightRequest="24"
                    HorizontalOptions="Center"
                    Source="pencil.png"
                    VerticalOptions="Center"
                    WidthRequest="24" />
                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10" />
                </Border.Shadow>
            </Border>
            <Border
                Grid.Column="3"
                BackgroundColor="White"
                HeightRequest="30"
                IsVisible="{Binding IsOwnPost}"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="0"
                WidthRequest="30">
                <Image
                    HeightRequest="24"
                    HorizontalOptions="Center"
                    Source="trash.png"
                    VerticalOptions="Center"
                    WidthRequest="24" />
                <Border.Shadow>
                    <Shadow Brush="Gray" Radius="10" />
                </Border.Shadow>
            </Border>
        </Grid>
        <ScrollView Grid.Row="1">
            <Grid RowDefinitions="Auto,*" RowSpacing="10">
                <ContentView Grid.Row="0" BindingContext="{Binding Post}">
                    <ContentView.Resources>
                        <DataTemplate x:Key="withImage">
                            <templates:PostWithImage />
                        </DataTemplate>
                        <DataTemplate x:Key="withOnlyImage">
                            <templates:PostWithOnlyImage />
                        </DataTemplate>
                        <DataTemplate x:Key="noImage">
                            <templates:PostWithNoImage />
                        </DataTemplate>
                    </ContentView.Resources>
                    <ContentView>
                        <ContentView.Triggers>
                            <DataTrigger
                                Binding="{Binding PostTemplateContentViewName}"
                                TargetType="ContentView"
                                Value="WithNoImage">
                                <Setter Property="ControlTemplate" Value="{StaticResource noImage}" />
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding PostTemplateContentViewName}"
                                TargetType="ContentView"
                                Value="ImageOnly">
                                <Setter Property="ControlTemplate" Value="{StaticResource withImageOnly}" />
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding PostTemplateContentViewName}"
                                TargetType="ContentView"
                                Value="WithImage">
                                <Setter Property="ControlTemplate" Value="{StaticResource withImage}" />
                            </DataTrigger>
                        </ContentView.Triggers>
                    </ContentView>
                </ContentView>

                <Border
                    Grid.Row="0"
                    Padding="0,8"
                    BackgroundColor="White"
                    StrokeThickness="0">
                    <Grid RowDefinitions="Auto,250,Auto,Auto" RowSpacing="8">
                        <Grid
                            Padding="8,0"
                            ColumnDefinitions="40,Auto,*"
                            ColumnSpacing="5">
                            <Border
                                Grid.Column="0"
                                BackgroundColor="LightGoldenrodYellow"
                                HeightRequest="40"
                                StrokeShape="RoundRectangle 20"
                                WidthRequest="40">
                                <Image
                                    Aspect="AspectFill"
                                    BackgroundColor="LightGoldenrodYellow"
                                    HeightRequest="30"
                                    HorizontalOptions="Center"
                                    Source="{Binding Post.UserPhotoUrl}"
                                    VerticalOptions="Center"
                                    WidthRequest="30" />
                            </Border>

                            <Grid
                                Grid.Column="1"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="{Binding Post.UserName}" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="{Binding Post.PostedOnDisplay}"
                                    VerticalOptions="Center" />
                            </Grid>

                        </Grid>
                        <Border
                            Grid.Row="1"
                            BackgroundColor="LightBlue"
                            HeightRequest="250"
                            StrokeThickness="0">
                            <Image
                                Aspect="Center"
                                HeightRequest="250"
                                Source="{Binding Post.PhotoUrl}" />
                        </Border>
                        <Label
                            Grid.Row="2"
                            Padding="8,0"
                            FontSize="15"
                            Text="{Binding Post.Content}"
                            TextColor="{StaticResource Gray900}" />


                        <VerticalStackLayout Grid.Row="3">

                            <BoxView Style="{StaticResource fadedLine}" />

                            <FlexLayout Margin="0,7,0,0" JustifyContent="SpaceAround">

                                <HorizontalStackLayout Spacing="2">
                                    <controls:PrimaryColorImage
                                        Source="heart.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                    <Label Text="Like" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="2">
                                    <controls:PrimaryColorImage
                                        Source="comment.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                    <Label Text="Comment" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="2">
                                    <controls:PrimaryColorImage
                                        Source="save.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                    <Label Text="Save" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="2">
                                    <controls:PrimaryColorImage
                                        Source="share.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                    <Label Text="Share" />
                                </HorizontalStackLayout>
                            </FlexLayout>
                        </VerticalStackLayout>

                    </Grid>

                </Border>
                <VerticalStackLayout
                    x:Name="comments"
                    Grid.Row="1"
                    Padding="0,15"
                    Spacing="10">
                    <Grid
                        Padding="8,0"
                        ColumnDefinitions="40,*"
                        ColumnSpacing="5">
                        <Border
                            Grid.Column="0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            VerticalOptions="Start"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFit"
                                BackgroundColor="LightGoldenrodYellow"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="personal.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                        </Border>
                        <Grid
                            Grid.Column="1"
                            Padding="5"
                            BackgroundColor="White"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="5">
                            <Grid
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="Pham Trung" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="04 Jan 2025"
                                    VerticalOptions="Center" />
                            </Grid>
                            <Label
                                Grid.Row="1"
                                Text="Comment text"
                                TextColor="Gray" />
                        </Grid>
                    </Grid>
                    <Grid
                        Padding="8,0"
                        ColumnDefinitions="40,*"
                        ColumnSpacing="5">
                        <Border
                            Grid.Column="0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            VerticalOptions="Start"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFill"
                                BackgroundColor="LightGoldenrodYellow"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="personal.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                        </Border>
                        <Grid
                            Grid.Column="1"
                            Padding="5"
                            BackgroundColor="White"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="5">
                            <Grid
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="Pham Trung" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="04 Jan 2025"
                                    VerticalOptions="Center" />
                            </Grid>
                            <Label
                                Grid.Row="1"
                                Text="Comment text"
                                TextColor="Gray" />
                        </Grid>



                    </Grid>
                    <Grid
                        Padding="8,0"
                        ColumnDefinitions="40,*"
                        ColumnSpacing="5">
                        <Border
                            Grid.Column="0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            VerticalOptions="Start"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFill"
                                BackgroundColor="LightGoldenrodYellow"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="personal.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                        </Border>
                        <Grid
                            Grid.Column="1"
                            Padding="5"
                            BackgroundColor="White"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="5">
                            <Grid
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="Pham Trung" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="04 Jan 2025"
                                    VerticalOptions="Center" />
                            </Grid>
                            <Label
                                Grid.Row="1"
                                Text="Comment text Comment text Comment textComment textComment text"
                                TextColor="Gray" />
                        </Grid>



                    </Grid>
                    <Grid
                        Padding="8,0"
                        ColumnDefinitions="40,*"
                        ColumnSpacing="5">
                        <Border
                            Grid.Column="0"
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 20"
                            VerticalOptions="Start"
                            WidthRequest="40">
                            <Image
                                Aspect="AspectFill"
                                BackgroundColor="LightGoldenrodYellow"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                Source="personal.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                        </Border>
                        <Grid
                            Grid.Column="1"
                            Padding="5"
                            BackgroundColor="White"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="5">
                            <Grid
                                Grid.Row="0"
                                ColumnDefinitions="Auto, Auto, Auto"
                                ColumnSpacing="5"
                                VerticalOptions="Center">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    Text="Pham Trung" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,-7,0,0"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="."
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="2"
                                    FontSize="12"
                                    Text="04 Jan 2025"
                                    VerticalOptions="Center" />
                            </Grid>
                            <Label
                                Grid.Row="1"
                                Text="Comment text Comment text Comment textComment textComment text"
                                TextColor="Gray" />
                        </Grid>



                    </Grid>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
        <Grid
            Grid.Row="2"
            Padding="15,10,15,15"
            BackgroundColor="White"
            ColumnDefinitions="*,Auto"
            ColumnSpacing="5">
            <controls:NoBorderEntry
                Grid.Column="0"
                Placeholder="Enter comment..."
                PlaceholderColor="Black" />
            <Border
                Grid.Column="1"
                BackgroundColor="{StaticResource Primary}"
                HeightRequest="44"
                StrokeShape="RoundRectangle 8"
                WidthRequest="44">
                <controls:WhiteImage
                    HeightRequest="24"
                    Source="send.png"
                    WidthRequest="24" />
            </Border>
        </Grid>
    </Grid>

</ContentPage>