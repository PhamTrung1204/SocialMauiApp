<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SocialMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:SocialMauiApp.Pages"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    Title="SocialMauiApp"
    Shell.FlyoutBehavior="Flyout">
    <ShellContent
        Title="Onboarding Page"
        ContentTemplate="{DataTemplate pages:OnboardingPage}"
        Route="OnboardingPage" />
    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:InitPage}"
        Route="InitPage" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />


</Shell>
